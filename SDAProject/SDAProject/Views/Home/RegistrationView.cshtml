@model SDAProject.Models.RegistrationModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>Bright Gradient Registration</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="@Url.Content("https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;700&display=swap")" rel="stylesheet">
    <style>


        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            min-height: 100vh;
            background: linear-gradient(135deg, #d9f0ff, #a7d8ff, #7ec0ff);
            font-family: 'Poppins', sans-serif;
            display: flex;
            flex-direction: column;
        }

        /* Navbar Styles */
        .navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background: #020947;
            padding: 1rem 2rem;
            box-shadow: 0 2px 10px rgba(0,255,247,0.2);
            font-family: 'Orbitron', sans-serif;
            width: 100%;
            position: sticky;
            top: 0;
            z-index: 1000;
        }

        .logo {
            color: #f8ffff;
            font-size: 1.5rem;
            font-weight: bold;
        }

        .nav-links {
            list-style: none;
            display: flex;
            gap: 1.5rem;
        }

            .nav-links li a {
                color: #f0f0f0;
                text-decoration: none;
                font-weight: 500;
                padding: 0.3rem 0.6rem;
                transition: 0.3s;
            }

                .nav-links li a:hover {
                    color: #00fff7;
                    border-bottom: 2px solid #00fff7;
                }

        /* Main Content Styles */
        .main-content {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 20px;
        }

        .register-box {
            background: #ffffff;
            padding: 40px 30px;
            border-radius: 12px;
            box-shadow: 0 10px 30px rgba(30, 144, 255, 0.25);
            width: 400px;
            margin-top: 20px;
        }

            .register-box h2 {
                text-align: center;
                color: #2a3f66;
                margin-bottom: 25px;
                font-weight: 700;
            }

        .input-box {
            position: relative;
            margin: 18px 0;
        }

            .input-box input,
            .input-box select {
                width: 100%;
                padding: 14px 16px;
                border: 2px solid #7ec0ff;
                border-radius: 6px;
                background: #f0f8ff;
                color: #2a3f66;
                font-size: 16px;
                outline: none;
                transition: border-color 0.3s ease, background 0.3s ease;
            }

                .input-box input::placeholder {
                    color: #7aa9d9;
                }

                .input-box input:focus,
                .input-box select:focus {
                    background: #d9f0ff;
                    border-color: #3a8dde;
                }

            .input-box select {
                appearance: none;
                background-image: url("data:image/svg+xml;charset=US-ASCII,%3Csvg%20width%3D'12'%20height%3D'8'%20viewBox%3D'0%200%2012%208'%20xmlns%3D'http://www.w3.org/2000/svg'%3E%3Cpath%20d%3D'M1.41%200L6%204.58%2010.59%200%2012%201.41%206%207.41%200%201.41z'%20fill%3D'%237aa9d9'%2F%3E%3C%2Fsvg%3E");
                background-repeat: no-repeat;
                background-position: right 10px center;
                background-size: 12px;
            }

        .policy {
            display: flex;
            align-items: center;
            margin: 15px 0;
        }

            .policy input[type="checkbox"] {
                margin-right: 10px;
                transform: scale(1.2);
                accent-color: #3a8dde;
            }

            .policy h3 {
                color: #4a6fa5;
                font-size: 14px;
                font-weight: 500;
            }

        .glow-button {
            width: 100%;
            padding: 14px;
            border: 2px solid transparent;
            border-image: linear-gradient(to right, #3a8dde, #70c1ff) 1;
            background: none;
            color: #3a8dde;
            font-size: 17px;
            font-weight: 700;
            border-radius: 6px;
            cursor: pointer;
            position: relative;
            overflow: hidden;
            z-index: 1;
            transition: all 0.3s ease;
            box-shadow: 0 0 10px #70c1ff55;
        }

            .glow-button::before {
                content: '';
                position: absolute;
                top: 0;
                left: -100%;
                width: 200%;
                height: 100%;
                background: linear-gradient(to right, #3a8dde, #70c1ff, #3a8dde);
                transition: all 0.4s ease;
                z-index: -1;
                filter: blur(6px);
            }

            .glow-button:hover::before {
                left: 0;
            }

            .glow-button:hover {
                color: #fff;
                background: #3a8dde;
                box-shadow: 0 0 20px #3a8ddeaa;
            }

        .text-center {
            text-align: center;
            margin-top: 20px;
            color: #4a6fa5;
            font-size: 14px;
        }

            .text-center a {
                color: #3a8dde;
                text-decoration: none;
                font-weight: 600;
            }

                .text-center a:hover {
                    text-decoration: underline;
                }

        /* Responsive Design */
        @@media (max-width: 768px) {
            .navbar {
                flex-direction: column;
                align-items: flex-start;
                padding: 1rem;
            }

            .nav-links {
                flex-direction: column;
                width: 100%;
                display: none;
                margin-top: 1rem;
            }

                .nav-links.active {
                    display: flex;
                }

            .register-box {
                width: 100%;
                max-width: 400px;
                padding: 30px 20px;
            }
        }
    </style>
</head>
<body>
    <nav class="navbar">
        <a style="text-decoration:none" href="@Url.Action("LandingPageView", "LandingPage")" class="logo">CIES</a>
        <ul class="nav-links">
            <li><a href="@Url.Action("DashBoardView", "DashBoard")">DashBoard</a></li>
        </ul>
    </nav>

    <div class="main-content">
        <div class="register-box">
            <h2>Register</h2>
            @if (ViewBag.Success != null && ViewBag.Success == true)
            {
                <div style="background: #e6ffed; color: #2e7d32; padding: 12px 20px; border-left: 6px solid #2e7d32; border-radius: 6px; font-weight: 600; margin-bottom: 15px;">
                    ✅ Employee Registered Successfully!
                </div>
            }
            @if (ViewBag.Error != null)
            {
                <div style="background: #ffeaea; color: #c62828; padding: 12px 20px; border-left: 6px solid #c62828; border-radius: 6px; font-weight: 600; margin-bottom: 15px;">
                    @ViewBag.Error
                </div>
            }


            <form asp-action="Register" method="post">
                <div class="input-box">
                    <input asp-for="DeviceID" placeholder="Enter Device ID" value="@Model?.DeviceID" required />
                </div>
                <div class="input-box">
                    <input asp-for="EmpiName" placeholder="Enter Name" value="@Model?.EmpiName" required />
                </div>
                <div class="input-box">
                    <input asp-for="Address" placeholder="Enter Address" value="@Model?.Address" required />
                </div>
                <div class="input-box">
                    <input asp-for="ContactNo" placeholder="Enter Mobile Number" value="@Model?.ContactNo" required />
                </div>
                <div class="input-box">
                    <select asp-for="DepartName" required>
                        <option value="" disabled selected>Select department</option>
                        <option value="Finance" selected="@(Model?.DepartName == "Finance")">Finance</option>
                        <option value="IT" selected="@(Model?.DepartName == "IT")">IT</option>
                    </select>
                </div>
                <div class="policy">
                    <input type="checkbox" required />
                    <h3>I accept all terms & conditions</h3>
                </div>
                <div class="input-box">
                    <input type="submit" class="glow-button" value="→ Register Now" />
                </div>
            </form>

            <div class="text-center">
                Already have an account? <a href="#">Login</a>
            </div>
        </div>
    </div>
</body>
</html>