                display: none;
            }

                .nav-links.active {
                    display: flex;
                }

            .navbar {
                flex-direction: column;
                align-items: flex-start;
            }
        }

        .footer {
            background-color: #1e1e2f;
            color: #f0f0f0;
            text-align: center;
            padding: 20px;
            font-family: 'Segoe UI', sans-serif;
            margin-top: 40px;
