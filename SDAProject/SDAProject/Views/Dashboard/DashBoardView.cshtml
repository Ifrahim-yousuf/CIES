@model List<SDAProject.Models.DashBoardModel>

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>Employee Cards - Bright Theme</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            background: linear-gradient(to right, #e0f7ff, #f0fbff);
            min-height: 100vh;
            color: #333;
            font-family: 'Poppins', sans-serif;
        }

        .navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background: #020947;
            padding: 1rem 2rem;
            box-shadow: 0 2px 10px rgba(0,255,247,0.2);
            font-family: 'Orbitron', sans-serif;
            margin-bottom: 40px;
        }

        .logo {
            color: #ffffff;
            font-size: 1.5rem;
            font-weight: bold;
        }

        .nav-links {
            list-style: none;
            display: flex;
            gap: 1.5rem;
        }

            .nav-links li a {
                color: #f0f0f0;
                text-decoration: none;
                font-weight: 500;
                padding: 0.3rem 0.6rem;
                transition: 0.3s;
            }

                .nav-links li a:hover {
                    color: #9ea1a1;
                    border-bottom: 2px solid #b3b9b9;
                }

        .logout-btn {
            background: #ff3b3b;
            padding: 0.4rem 0.8rem;
            border-radius: 5px;
            color: white !important;
            font-weight: bold;
        }

            .logout-btn:hover {
                background: #e60000;
                border: none;
            }

        .container {
            padding: 0 40px 40px;
            width: 100%;
            max-width: 1400px;
            margin: 0 auto;
        }

        h1 {
            color: #0b3d91;
            margin-bottom: 30px;
            font-weight: 700;
            font-size: 2.5rem;
            text-align: center;
            text-shadow: 1px 1px 4px #a0c8ff;
        }

        .card-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 20px;
            width: 100%;
        }

        .card {
            background: #ffffff;
            padding: 20px;
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(11, 61, 145, 0.15);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            border: 1.5px solid #c5defc;
        }

            .card:hover {
                transform: translateY(-10px) scale(1.03);
                box-shadow: 0 10px 25px rgba(11, 61, 145, 0.3);
                border-color: #0b3d91;
            }

            .card h3 {
                margin-bottom: 10px;
                font-size: 22px;
                color: #0b3d91;
                font-weight: 700;
            }

            .card p {
                margin: 8px 0;
                font-size: 15px;
                color: #555;
            }

                .card p span {
                    font-weight: 600;
                    color: #1a73e8;
                }

        @@media (max-width: 768px) {
            .navbar {
                flex-direction: column;
                align-items: flex-start;
                padding: 1rem;
            }

            .nav-links {
                flex-direction: column;
                background-color: #111;
                position: absolute;
                top: 70px;
                right: 0;
                width: 200px;
                padding: 1rem;
                display: none;
            }

                .nav-links.active {
                    display: flex;
                }

            .container {
                padding: 0 20px 20px;
            }
        }
    </style>
</head>
<body>
    <nav class="navbar admin-navbar">
        <div class="logo">Admin Panel</div>
        <ul class="nav-links">
            <li><a href="@Url.Action("RegistrationView", "Home")">Registration</a></li>

            <li><a href="@Url.Action("Logout", "Home")" class="logout-btn">Logout</a></li>

        </ul>
    </nav>

    <div class="container">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert" style="margin-bottom: 20px;">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert" style="margin-bottom: 20px;">
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <h1>Employee Directory</h1>

        <div class="card-container">
            @foreach (var emp in Model)
            {
                <a style="text-decoration:none" href="@Url.Action("EmployeeDetails", "Dashboard", new { id = emp.DeviceID })">
                    <div class="card">
                        <h3>@emp.EmpiName</h3>
                        <p><span>Department ID:</span> @emp.DepartmentID</p>
                        <p><span>Manager ID:</span> @emp.ManagerID</p>
                        <p><span>Device ID:</span> @emp.DeviceID.ToString().ToUpper()</p>
                    </div>
                </a>
            }
        </div>
    </div>
</body>
</html>